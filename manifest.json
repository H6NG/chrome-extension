{
  "manifest_version": 3,
  "name": "UBC Boost",
  "version": "1.0.0",
  "description": "Enhances the UBC experience with additional features and quick access to essential links.",
  
  "icons":{
    "16": "chrome-extension-project/images/icon.png",
    "48": "chrome-extension-project/images/icon.png",
    "128": "chrome-extension-project/images/icon.png"
  },

  "action": {
    "default_popup": "chrome-extension-project/popup/popup.html",
    "default_icon": {
      "16": "chrome-extension-project/images/icon.png",
      "48": "chrome-extension-project/images/icon.png",
      "128": "chrome-extension-project/images/icon.png"
    }
  },

  "permissions": ["storage", "tabs", "https://ubcece.onrender.com/*"]
}
